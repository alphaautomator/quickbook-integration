{
  "name": "quickbooks-integration",
  "version": "1.0.0",
  "description": "QuickBooks Online integration service with OAuth and continuous data sync",
  "private": true,
  "workspaces": [
    "lib",
    "services/sync-service"
  ],
  "scripts": {
    "bootstrap": "ts-node scripts/bootstrap.ts",
    "dev:sync": "npm run dev --workspace=services/sync-service",
    "dev": "npm run dev:sync",
    "build": "npm run build --workspaces",
    "build:lib": "npm run build --workspace=lib",
    "build:sync": "npm run build --workspace=services/sync-service",
    "inspect-db": "./scripts/inspect-db.sh",
    "start": "node services/sync-service/dist/worker.js"
  },
  "keywords": [
    "quickbooks",
    "oauth",
    "integration",
    "sync"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}
